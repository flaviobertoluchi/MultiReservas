@model Reserva

@{
    ViewData["Title"] = "Reserva";
}

@if (Model is not null)
{
    <form method="post">
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-6">

                    @if (ViewBag.Mensagem is not null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Mensagem
                        </div>
                    }

                    @if (Model.Status == ReservaStatus.Aberta)
                    {
                        <a class="btn btn-primary m-1 float-end" asp-area="" asp-controller="Reserva" asp-action="Adicionar" asp-route-local="@Model.Local">
                            <span class="h2"><i class="fa-solid fa-plus"></i></span>
                            <p class="h4">Nova</p>
                        </a>
                    }

                    <h1>@Model.Local - @Model.Nome</h1>
                    <h3>@Model.Status</h3>

                    <input hidden readonly class="reservaid" asp-for="Id" />
                    <input hidden readonly asp-for="UsuarioId" />
                    <input hidden readonly asp-for="Status" />

                    <div class="my-3">
                        <label class="form-label" asp-for="Local"></label>
                        <input class="form-control" asp-for="Local" min="1" max="@ViewBag.QuantidadeLocais" />
                        <span asp-validation-for="Local" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Nome"></label>
                        <input class="form-control" asp-for="Nome">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="DataInicio"></label>
                        <input class="form-control" asp-for="DataInicio">
                        <span asp-validation-for="DataInicio" class="text-danger"></span>
                    </div>

                    @if (Model.Status == ReservaStatus.Aberta)
                    {
                        <div class="mb-4">
                            <div class="row">
                                <span class="h4">Adicionar item:</span>
                                <div class="col-7">
                                    <select class="form-select item" asp-items="@ViewBag.Itens">
                                        <option value="-1" selected></option>
                                    </select>
                                </div>
                                <div class="col-2">
                                    <input class="form-control quantidade" type="number" min="1" value="1">
                                </div>
                                <div class="col-3 text-end">
                                    <a class="btn btn-primary adicionar"><i class="fa-solid fa-plus"></i> Adicionar</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label class="form-label" asp-for="DataFim"></label>
                            <input class="form-control" asp-for="DataFim">
                        </div>
                    }

                    <div class="row">
                        <div class="reservaitempartial">
                            @await Html.PartialAsync("_ReservaItemPartial", Model)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Observacao"></label>
                        <textarea class="form-control" asp-for="Observacao" style="height: 150px;"></textarea>
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>

                    @if (Model.Status == ReservaStatus.Aberta)
                    {
                        <button class="btn btn-primary" asp-area="" asp-controller="Reserva" asp-action="Detalhes" asp-route-id="@Model.Id">
                            <i class="fa-solid fa-floppy-disk"></i> Salvar
                        </button>

                        <a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#finalizarModal">
                            <i class="fa-solid fa-credit-card"></i> Finalizar
                        </a>

                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelarModal">
                            <i class="fa-solid fa-ban"></i> Cancelar
                        </a>
                    }

                    <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-calendar-days"></i> Voltar
                    </a>

                </div>
            </div>
        </div>

        @if (Model.Status == ReservaStatus.Aberta)
        {
            <div id="finalizarModal" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-success">
                            <h5 class="modal-title h5">Finalizar - @Model.Nome</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Tem certeza que deseja finalizar a reserva de <span class="fw-bold">@Model.Nome</span>?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-success" asp-area="" asp-controller="Reserva" asp-action="Detalhes" asp-route-id="@Model.Id" asp-route-reservaStatus="1">
                                <i class="fa-solid fa-credit-card"></i> Finalizar
                            </button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fa-solid fa-xmark"></i> Fechar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="cancelarModal" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger">
                            <h5 class="modal-title h5">Cancelar - @Model.Nome</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p>Tem certeza que deseja cancelar a reserva de <span class="fw-bold">@Model.Nome</span>?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-danger" asp-area="" asp-controller="Reserva" asp-action="Detalhes" asp-route-id="@Model.Id" asp-route-reservaStatus="2">
                                <i class="fa-solid fa-ban"></i> Cancelar
                            </button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fa-solid fa-xmark"></i> Fechar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }

    </form>
}

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/reserva/detalhes.js"></script>
}
