@model Paginacao<Usuario>

<div class="table-responsive">
    <table class="table table-hover">

        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Login</th>
                <th scope="col">Ativo</th>
                <th scope="col" class="text-end">
                    <a class="btn btn-primary" style="min-width: 42px;" asp-area="" asp-controller="Usuario" asp-action="Adicionar">
                        <i class="fa-solid fa-square-plus"></i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">

            @if (Model?.Data.Count > 0)
            {
                foreach (var item in Model.Data)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Login</td>
                        <td>
                            <div class="form-check form-switch">
                                <input disabled readonly class="form-check-input" type="checkbox" checked="@item.Ativo">
                            </div>
                        </td>
                        <td class="text-end">
                            <a class="btn btn-secondary" style="min-width: 42px;" asp-area="" asp-controller="Usuario" asp-action="Detalhes" asp-route-id="@item.Id">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>

<partial name="_PaginacaoPartial" />
